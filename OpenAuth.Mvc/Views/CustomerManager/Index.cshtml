<!--编辑对话框-->
<div id="editDlg" style="display: none">
    <div class="col-xs-12">
        <form class="form-horizontal" id="editForm">
            <div class="form-group">
                <label class="col-sm-5 control-label no-padding-right" for=""> 客户代码 </label>
                <div class="col-sm-7">
                    <input type="text" id="CustomerCode" v-model="CustomerCode" maxlength="30" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label no-padding-right" for=""> 客户名称 </label>
                <div class="col-sm-7">
                    <input type="text" id="CustomerName" v-model="CustomerName" maxlength="30" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label no-padding-right" for="">客户类型</label>
                <div class="col-sm-7">
                    @*<select name="selTest" title="请选择" class="selectpicker" data-live-search="true" data-style="btn-info">*@
                        @*<select name="selTest" title="请选择" class="selectpicker show-tick form-control" data-style="btn-default">
                            <option value="0">个人客户</option>
                            <option value="1">公司客户</option>
                        </select>*@
                    <select id="CustomerType" v-model="CustomerType">
                        <option value="0">个人客户</option>
                        <option value="1">企业客户</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label no-padding-right" for=""> 客户地址 </label>
                <div class="col-sm-7">
                    <input type="text" id="CustomerAddr" v-model="CustomerAddr" maxlength="200" />
                </div>
            </div>
        </form>
    </div>
</div>
